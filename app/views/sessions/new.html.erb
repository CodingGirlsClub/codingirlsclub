<%= render partial: 'shared/frontend/breadcrumb', locals: { action_type: '登录' } %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-register-form">
        <%= form_for(:session, url: login_path) do |f| %>

          <div class="form-group">
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            <span class="input-icon"><i class=" fa fa-envelope"></i></span>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            <span class="input-icon"><i class=" fa fa-lock"></i></span>
          </div>

          <div class="form-group text-right">
            <%= f.check_box :remember_me %>
            <span>记住我</span>
          </div>

          <div class="form-group text-right">
            <%= link_to "忘记密码?", new_password_reset_path %>
          </div>
          <%= f.submit "登录", class: "btn btn-lg btn-block btn-skin" %>
        <% end %>


        <%= link_to '注册', signup_path, class: 'btn btn-lg btn-link btn-block' %>
      </div>
    </div>
  </div>
</div>

<div class="space70"></div>
