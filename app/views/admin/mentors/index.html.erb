<h1>Mentor申请列表</h1>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        共 <%= @mentors.total_count %> 条记录
      </div>
      <div class="panel-body">

          <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>用户名</th>
                <th>状态</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
            <% @mentors.each do |m| %>
               <%= render "mentors", m: m %>
            <%end%>
            </tbody>
          </table>

        </ul>
        <%= paginate @mentors %>
      </div>
    </div>
  </div>
</div>
