<h1>学生认证审核列表</h1>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        共 <%= @users.total_count %> 条记录
      </div>
      <div class="panel-body">

          <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>用户名</th>
                <th>Email</th>
                <th>申请角色</th>
                <th>审核状态</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td> <%= user.name%> </td>
                  <td> <%= user.email%> </td>
                  <td> <%= user.casting_name%> </td>
                  <td> <%= user.casting_check_status%> </td>
                  <td> <%= link_to "详细", admin_user_path(user) %> </td>
                </tr>
              <%end%>
            </tbody>
          </table>

        </ul>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
