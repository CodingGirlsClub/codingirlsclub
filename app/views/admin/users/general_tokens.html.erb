<h1>有效的邀请码列表</h1>

<div class="row">
  
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading" style="padding-bottom: 25px;">
         <div class="col-lg-3">共 <%= @tokens.total_count %>  条记录</div>
         <div class="col-lg-9 text-right" ><%= link_to '一键生成10个邀请码', gen_general_token_admin_users_path %></div>        
         
      </div>
      <div class="panel-body">

          <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>邀请码原值</th>
                <th>邀请码</th>
                <th>有效期</th>
              </tr>
            </thead>
            <tbody>
               <% @tokens.each do |token| %>
                <tr>
                  <td> <%= token.name %> </td>
                  <td> <%= token.name.split(":").last %> </td>
                  <td> <%= token.expired_at.strftime("%Y-%m-%d %H:%M") %> </td>
                </tr>
              <%end%>
            </tbody>
          </table>

        </ul>
        <%= paginate @tokens %>
      </div>
    </div>
  </div>
</div>
