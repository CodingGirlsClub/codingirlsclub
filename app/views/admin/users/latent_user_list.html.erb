<h1>注册码申请用户列表</h1>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        共 <%= @latent_users.total_count %> 条记录
      </div>
      <div class="panel-body">

          <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Email</th>
                <th>状态</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% @latent_users.each do |latent_user| %>
                <tr>
                  <td> <%= latent_user.email%> </td>
                  <td> <%= latent_user.active? ? "已激活" : "未激活"%> </td>
                  <td class="latent_user_invited"> <%= latent_user.invited ? "已邀请" : (link_to "发送邀请码", gen_signup_link_admin_user_path(latent_user)) %> </td>
                </tr>
              <%end%>
            </tbody>
          </table>

        </ul>
        <%= paginate @latent_users %>
      </div>
    </div>
  </div>
</div>
