<h1>校园大使申请问题列表</h1>

<div class="row">
  
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading" style="padding-bottom: 25px;">
         <div class="col-lg-3">共 <%= @qas.total_count %>  条记录</div>
         <div class="col-lg-9 text-right" ><%= link_to '创建校园大使申请问题', create_qa_admin_ambassadors_path %></div>        
         
      </div>
      <div class="panel-body">

          <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>名称</th>
                <th>状态</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
               <% @qas.each do |qa| %>
                <tr>
                  <td> <%= qa.name%> </td>
                  <td> <%= qa.applied? ? "取消应用" : "应用此问题"%> </td>
                  <td class="qa_applied"> 
                     <%= qa.applied ? (link_to "取消应用", unapply_qa_admin_ambassador_path(qa)) : (link_to "应用此问题", apply_qa_admin_ambassador_path(qa)) %> 
                     ·
                     <%= link_to "删除此问题", destroy_qa_admin_ambassador_path(qa), method: :delete %>
                  </td>
                </tr>
              <%end%>
            </tbody>
          </table>

        </ul>
        <%= paginate @qas %>
      </div>
    </div>
  </div>
</div>
