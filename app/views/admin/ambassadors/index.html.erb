<h1>校园大使申请列表</h1>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        共 <%= @ambassadors.total_count %> 条记录
      </div>
      <div class="panel-body">

          <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>用户名</th>
                <th>状态</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% @ambassadors.each do |a| %>
                <tr>
                  <td> <%= a.user.name%> </td>
                  <td> <%= a.applied? ? "已通过" : "未通过"%> </td>
                  <td class="ambassador_applied"> 
                     <%= a.applied ? "已通过" : (link_to "通过申请", apply_admin_ambassador_path(a))  %> 
                     ·
                     <%= link_to "查看详细", admin_ambassador_path(a) %>
                     ·
                     <%= link_to "删除此申请", admin_ambassador_path(a), method: :delete, data: { confirm: "确定删除?" } , class: 'delete' %>
                  </td>
                </tr>
              <%end%>
            </tbody>
          </table>

        </ul>
        <%= paginate @ambassadors %>
      </div>
    </div>
  </div>
</div>
