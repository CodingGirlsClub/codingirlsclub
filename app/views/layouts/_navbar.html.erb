<div class="top-bar dark">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 hidden-xs">
        <span>
          <div id="my-modal" class="modal fade" aria-labelledby="my-modalLabel" aria-hidden="true" tabindex="-1" role="dialog" style="position:relative;left: 250px;z-index:999;">
            <div class="modal-dialog" data-dismiss="modal">
              <div class="modal-content" style="text-align: center;" >
                <div class="modal-body">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                  <%= image_tag "QR-wechat.jpg", class: "img-responsive", style: "position: relative;left: 150px;top: 0px;" %>
                  <strong>扫描二维码以关注公众号</strong>
                </div>
              </div>
            </div>
          </div>
          <button id="show-img" type="button" class="btn btn-default" data-toggle="modal" data-target="#my-modal"><i class="fa fa-wechat"></i> <%= t("Follow Wechat") %></button>
        </span>
        <span>
          <%= mail_to ENV['MAILER_TO'] do %>
            <i class="fa fa-envelope"></i>
            info@codingirls.club
          <% end %>
        </span>
      </div>
      <div class="col-sm-6 text-right">
        <!-- 未登录，或登录的用户为在校大学生且未申请过校园大使，展示申请链接 -->
        <% if !logged_in? || (logged_in? && current_user.is_university_student? && !Ambassador.exists?(user_id: current_user.id)) %>
          <span>
            <%= link_to new_ambassador_path do %>
              <i class="fa fa-pencil"></i>
              <%= t("Apply Campus Ambassador") %>
            <% end %>
          </span>
        <% end %>
        <span>
          <%= link_to '#' do %>
            <i class="fa fa-pencil"></i>
            <%= t("Become a Mentor") %>
          <% end %>
        </span>
        <% if logged_in? %>
          <span class="username">
            <%= link_to settings_profile_path do %>
              <i class='fa fa-user'></i>
              <%= "#{current_user.name}" %>
            <% end %>
          </span>
          <span>
            <%= link_to logout_path, method: :delete, class: 'apply' do %>
              <i class='fa fa-pencil'></i>
              <%= '退出' %>
            <% end %>
          </span>
        <% else %>
          <span>
            <%= link_to login_path do %>
              <i class="fa fa-user"></i>
              <%= t("Sign In") %>
            <% end %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>
