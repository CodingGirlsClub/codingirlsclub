<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <ul class="panel-breadcrumb breadcrumb">
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to '问题管理', '#' %></li>
      </ul>
      <header class="panel-heading">
        <h2 class="panel-title">问题管理</h2>
      </header>
      <div class="panel-body">
        <div class="table-toolbar">
          <div class="row">
            <div class="col-md-12">
              <div class="well well-sm shadow">
                <%= render partial: 'search' %>
              </div>
            </div>
          </div>
        </div>
        <p>问题数量: <%= @qas_count %></p>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>名称</th>
                <th>类别</th>
                <th>是否启用</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: 'qa', collection: @qas %>
            </tbody>
          </table>
        </div>
      </div>
      <%= paginate @qas, theme: 'bootstrap' %>
    </div>
  </div>
</div>
