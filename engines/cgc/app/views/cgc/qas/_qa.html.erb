<tr id='qa-<%= qa.id %>'>
  <td><%= qa.id %></td>
  <td><%= qa.title %></td>
  <td><%= qa.category %></td>
  <td><%= qa.applied %></td>
  <td>
    <%= link_to '详情', qa_path(qa), class: 'btn btn-info btn-xs' %>
    <%= link_to '编辑', edit_qa_path(qa), class: 'btn btn-info btn-xs' %>
    <% if qa.applied? %>
      <%= link_to '关闭', disabled_qa_path(qa), remote: true, method: :put, data: { confirm: '确定此项操作?', disable_with: '请稍等...' }, class: 'btn btn-info btn-xs' %>
    <% else %>
      <%= link_to '启用', enabled_qa_path(qa), remote: true, method: :put, data: { confirm: '确定此项操作?', disable_with: '请稍等...' }, class: 'btn btn-info btn-xs' %>
    <% end %>
    <%= link_to '问题列表', qa_questions_path(qa), class: 'btn btn-info btn-xs' %>
  </td>
</tr>
