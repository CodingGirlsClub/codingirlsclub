<div class="row">
  <div class="col-md-12">
    <ul class="panel-breadcrumb breadcrumb">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to '角色审核', '#' %></li>
      <li><%= link_to '校园大使', ambassadors_path %></li>
    </ul>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">申请人姓名: <%= @ambassador.user&.name %></h4>
        <p class="helping-text">申请宣言: <%= @ambassador.self_introduction %></p>
        <p class="helping-text">简历地址: <%= @ambassador.resume_url %></p>
      </div>
      <div class="panel-body">
        <fieldset>
          <legend>回答列表</legend>
          <dl class="dl-horizontal">
            <% @answers.each do |answer| %>
              <dt><%= answer[0] %></dt>
              <dd><%= answer[1] %></dd>
            <% end %>
          </dl>
        </fieldset>
      </div>
    </div>
  </div>
</div>
