<div class="row">
  <div class="col-md-12">
    <%= render partial: 'layouts/cgc/breadcrumb', locals: { objects: { home: 'root_path', '问题管理': 'qas_path'}} %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">问题列表</h4>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>名称</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: 'question', collection: @questions %>
            </tbody>
          </table>
        </div>

        <hr>

        <% if @qa.status_fresh? %>
          <div class="panel-heading">
            <h4 class="panel-title">添加新问题</h4>
          </div>
          <%= form_for(Question.new, url: qa_questions_path(@qa), html: { class: 'form-horizontal' }) do |f| %>
            <%= render partial: 'layouts/cgc/error_messages', locals: { object: Question.new } %>
            <div class="form-group">
              <%= f.label :title, '名称*', class: 'control-label col-md-2' %>
              <div class="col-md-6">
                <%= f.text_field :title, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-offset-2 col-md-8">
                <%= f.submit '提交', class: 'btn btn-primary', data: { disable_with: '请稍等...' } %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
